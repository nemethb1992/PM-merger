        <Style TargetType="Button" x:Key="next_panelBtn_style" BasedOn="{StaticResource StandardButton}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderBrush="White" 
                            BorderThickness ="1.1"
                            CornerRadius="3" 
                            Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource standard_button_hover_bg}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource standard_button_hover_bg}"/>
                                <Setter Property="Foreground" Value="White"/>
