        <Style TargetType="ListBoxItem" x:Key="listBoxItem_style">
            <!--<Setter Property="OverridesDefaultStyle" Value="true"/>-->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="{StaticResource itemBackground}"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource racs_light}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Grid x:Name="Grid">
                            <Border x:Name="Border" CornerRadius="3" Background="{StaticResource itemBackground}" BorderBrush="{StaticResource racs_light}" BorderThickness="{TemplateBinding BorderThickness}" Padding="0"/>
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
